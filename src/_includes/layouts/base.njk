<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="{{ siteData.themeColor }}">
  {% metagen
    title="Alex Dueppen: " + eleventyNavigation.key or title,
    desc=description,
    url=siteData.url + page.url,
    img=siteData.url + (thumb or "/images/icons/icon-512x512.png"),
    img_alt="Alex Dueppen logo",
    twitter_card_type=card_type,
    twitter_handle=siteData.links.twitter.username,
    name="Alex Dueppen" %}
  <title>Alex Dueppen: {{ eleventyNavigation.key or title }}</title>
  <link rel="stylesheet" href="/styles/index.css">
</head>
<body class="preload" itemscope itemtype="http://schema.org/WebPage">
  <header>
    <nav>
      {%- set navPages = collections.all | eleventyNavigation %}
      <ul>
        {%- for entry in navPages %}
          {%- set active = (entry.key == eleventyNavigation.key or entry.key == eleventyNavigation.parent) %}
          <li class="nav-item{% if active %} nav-item-active{% endif %}">
            <a href="{{ entry.url }}">{{ entry.key }}</a>
          </li>
        {%- endfor %}
      </ul>
    </nav>
  </header>
  <main>{{ content | safe }}</main>
  <footer>
    <div class="footerContent">
      <div class="themeSelect requiresJS" aria-label="Theme selection">
        <label>
          <input type="radio" name="theme" value="light" onclick="setTheme('light')">
          Light
        </label>
        <label>
          <input type="radio" name="theme" value="dark" onclick="setTheme('dark')">
          Dark
        </label>
        <label>
          <input type="radio" name="theme" value="black" onclick="setTheme('black')">
          Black
        </label>
      </div>
      <div class="source">
        <a href="{{ siteData.repoLink }}" target="_blank" rel="noopener">Website Source Code</a>
      </div>
    </div>
  </footer>
  <div class="requiresJS" id="newContent" onclick="window.location.reload();">
    <p>This site has been updated. Click here or reload the page to update.</p>
  </div>
  <script src="/scripts/index.js"></script>
</body>
</html>
